<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/for_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimen_52"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_dimen_5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{recordingBean.text}"
            android:textColor="#222222"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start recording"
            android:textSize="@dimen/common_dimen_14"
            android:textColor="#9b9cb2"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/my_arrow_right" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>